import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        int a,b = 1;
        int flag=0;
        Scanner m = new Scanner(System.in);
        a = m.nextInt();
        while (a>=b){
            if(a==b){
                flag =1;
            }
            b = b * 2;
        }
        if(flag == 1){
                System.out.println("YES");
            }
            else{
                System.out.println("NO");
            }
    }
}
